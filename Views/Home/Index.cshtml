@model IEnumerable<UserClientViewModel>
@using nexus_connect.Services.TimeServices
@{
    ViewData["Title"] = "Home Page";
}

@section MainContainer {
        <h2>Assigned projects</h2>
        @if(Model.Count() > 0){
            @foreach (var item in Model)
            {
                string createdDate = TimeConverter.TimeStampToDateWithTimeZone(item.CreatedTimestamp);
                <div class="jumbotron jumbotron-fluid border mb-2 bg-dark text-white w-25">
                  <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                               <h1 class="display-5">@item.Name</h1>
                            </div>  
                            <div class="col-sm-6" style="text-align: center;">
                                <p style="font-size: 0.9rem;text-align: center;">Permission : @item.AccessPermission</p>
                            </div>
                        </div>
                            <div class="row">
                            <div class="col-sm-6"> 
                                <p class="lead"><a href="#" class="btn btn-primary">Enter</a></p>
                            </div>
                            <div class="col-sm-6 bg-transparent">
                                <p  style="font-size: 0.6rem;text-align: center;">Acces started from : @createdDate</p>
                            </div>
                        </div>
                    </div>
                </div>
                }
        }else{
            <div class="jumbotron mb-2">
                    <div class="container-fluid">
                         <p class="p-2 bg-warning text-dark"><b class="text-white mr-4">!</b><strong>You have no Assigned Clients to your account yet.</strong></p>
                    </div>
            </div>
        }
}
