@model SignUpViewModel;
@{
    ViewData["title"] = "Login";
    string errorMsg = ViewBag.ErrorMessage;
}
<h2>Sign Up</h2>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-asp-validation-summary="ModelOnly"></div>
             <div class="form-group p-3">
                <label asp-for="FirstName">FirstName</label>
                <input type="text" class="form-control" asp-for="FirstName"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="LastName">LastName</label>
                <input type="text" class="form-control" asp-for="LastName"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Username">E-Mail</label>
                <input type="text" class="form-control" asp-for="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group p-3">
                <label asp-for="PasswordVerify">Re-type Password</label>
                <input type="password" class="form-control" asp-for="PasswordVerify"/>
                <span asp-validation-for="PasswordVerify" class="text-danger"></span>
            </div>
            <span class="p-3 text-danger">@errorMsg</span>
            <div class="form-group p-3">
               <input type="submit" value="Sign Up" class="btn btn-primary"/>
            </div>
        </form>
           <div class="form-group p-3">
                <a class="btn btn-success" asp-area="" asp-controller="Access" asp-action="Login">Return</a>
            </div>
    </div>
</div>