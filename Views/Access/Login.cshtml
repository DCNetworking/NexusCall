@model LoginViewModel;
@{
    ViewData["title"] = "Login";
}
<h2>Login Page</h2>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div asp-asp-validation-summary="ModelOnly"></div>
            <div class="form-group p-3">
                <label asp-for="Username">Username</label>
                <input type="text" class="form-control" asp-for="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group p-3">
                <div class="from-check">
                <label asp-for="RememberMe">RememberMe?</label>
                <input type="checkbox" class="checkbox-inline" asp-for="RememberMe"/>
                </div>
             <span asp-validation-for="RememberMe" class="text-warning"></span>
            </div>
            <div class="form-group p-3">
               <input type="submit" value="Login" class="btn btn-success"/>
            </div>
        </form>
         <a class="nav-link text-dark" asp-area="" asp-controller="Access" asp-action="Signup">Sign Up</a>
    </div>
</div>